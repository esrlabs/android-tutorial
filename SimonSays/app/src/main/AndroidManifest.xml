<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esrlabs.simonsays" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.esrlabs.simonsays.NewGameActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.esrlabs.simonsays.PatternPlaybackActivity"
            android:label="@string/title_activity_pattern_playback" >
        </activity>
        <activity
            android:name="com.esrlabs.simonsays.ColorInputActivity"
            android:label="@string/title_activity_color_input" >
        </activity>
        <activity
            android:name="com.esrlabs.simonsays.SuccessViewActivity"
            android:label="@string/title_activity_success_view" >
        </activity>
        <activity
            android:name="com.esrlabs.simonsays.FailViewActivity"
            android:label="@string/title_activity_fail_view" >
        </activity>
    </application>

</manifest>
